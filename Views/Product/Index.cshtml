@model List<Product>


<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />




    <style>
        .buchen {
            background-color: cornflowerblue;
            color: aliceblue;
            border: none;
            height: 35px;
            width: 100px;
            border-radius: 5px;
            margin-left: 25px;
            font-size: 15px;
            font-weight: bold;
        }

            .buchen:hover {
                background-color: burlywood;
            }


        h1 {
            font-size: 35px;
            font-weight: 300;
            text-align: center;
        }

        .image {
            width: 200px;
            display: inline-block;
            margin-right: 50px;
            margin-bottom: 15px;
        }


        .Überschrift {
            text-align: center;
        }

    </style>
</head>

<body>
    <div class="row col-6 ">
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Neues Produkt erstellen
            </a>
        </div>
        <div class="col-6 col-md-6">
            <a asp-controller="Product" asp-action="Cart" class="btn btn-info">
                <i class="bi bi-cart-plus"></i> Einkaufswagen
            </a>
        </div>



    </div>
    <div class="row pb-3">
        <div class="col-6">
        </div>
        <div class="row">
            
        </div>
       
       
    </div>
   
   
    <div>
       

        @foreach (var product in Model)
        {
            <div class="image">
                <img src="@Url.Content("~/Uploads/" + product.Bild)" width="170" height="130" />
                <p>@product.Name<br> @product.Price €</p>
                <div class="row">
                    <div class="col-6 col-md-6">
                        <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-success">
                            <i class="bi bi-pencil-square"></i> Bearbeiten
                        </a>
                    </div>
                    <div class="col-6 col-md-6">
                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger">
                            <i class="bi bi-trash-fill"></i> Löschen
                        </a>
                    </div>
                    <div class="row pb-3">
                        <div class="col-6">
                        </div>
                        <div class="row">
                        </div>


                    </div>
                    <div class="row pb-3">
                    <div class="col-6 col-md-3">
                            <a asp-controller="Product" asp-action="AddToCart" asp-route-id="@product.Id" class="btn btn-info">
                            <i class="bi bi-cart-plus"></i>Zum Einkaufswagen
                        </a>
                    </div>
                    </div>
                </div>
            </div>
        }
    </div>
  
</body>
</html>

