@model List<Mitwirkende>


<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Mitwirkende Liste</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="A_Mitwirkende" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i>  Neuen Mitwirkenden hinzufügen
                </a>
            </div>
        </div>

        <table id="tblData" class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Aufgabe</th>
                    <th>Essen</th>
                    <th>Allergie</th>
                    <th>Veranstaltung</th>
                    <th></th>
                </tr>
            </thead>
        </table>

    </div>
</div>

@section Scripts{
    <script src="~/js/mitwirkender12.js"></script>
    <script src="https://cdn.datatables.net/plug-ins/1.11.3/i18n/German.json"></script>
}