@model Organisator

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"> @(Model.Id != 0 ? "Organisator bearbeiten" : "Neuen Organisator hinzufügen") </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Id" hidden />
            <div class="row">
                <div class="col-12">
                    <div class="border p-3">
                        @*<div asp-validation-summary="ModelOnly"></div>*@
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Name" class="form-control border-0 shadow" />
                            <label asp-for="Name" class="ms-2"></label>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="Email" class="form-control border-0 shadow" />
                            <label asp-for="Email" class="ms-2"></label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>


                       
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Passwort" class="form-control border-0 shadow" />
                            <label asp-for="Passwort" class="ms-2"></label>
                            <span asp-validation-for="Passwort" class="text-danger"></span>
                        </div>
                        

                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                @if (Model.Id != 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Aktualisieren</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">Einfügen</button>
                                }
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="AOrganisator" asp-action="Index" class="btn btn-outline-primary border  form-control">
                                    Zurück
                                </a>
                            </div>
                        </div>


                    </div>
                </div>

            </div>

        </form>
    </div>
</div>