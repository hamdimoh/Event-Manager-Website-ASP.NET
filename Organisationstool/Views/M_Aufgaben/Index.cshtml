@model List<Veranstaltungen>

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"> Aufgaben Liste</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>

        </div>

        <div class=" container">
            <din class="row pt-4 pb-3">
                
                <div class="col-6 text-end"></div>
            </din>



            <table class="table table-bordered table-striped">
                <thead>
                    <tr>

                        <th>
                            Name der Veranstaltung
                        </th>
                        <th>
                            Adresse
                        </th>

                        <th>
                            Aufgabe
                        </th>
                        <th>
                            Datum & Uhrzeit
                        </th>
                        <th></th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model.OrderBy(u => u.Id))
                    {
                        <tr>

                            <td>
                                @obj.NamederVeranstaltung
                            </td>
                            <td>
                                @obj.Adresse
                            </td>

                            <td>
                                @obj.Aufgaben
                            </td>
                            <td>
                                @obj.Datum
                            </td>

                            <td>
                                <div class="row">


                                    <div class="col-6 col-md-5">
                                        <a asp-controller="M_Aufgaben" asp-action="Annehmen" asp-route-id="@obj.Id" class="btn btn-success ">
                                            <i class="bi bi-pencil-square"></i> Annehmen
                                        </a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }

                </tbody>

            </table>

        </div>

    </div>
</div>


